@{ 
    ViewData["Title"] = "Update Board";
}

@model Board

<h1>@ViewData["Title"]</h1>
<form asp-controller="Board" asp-action="Update">
    <input hidden asp-for = "@Model.Id">
    <div class="form-group">
        <label for="username">Nuevo nombre del tablero</label>
        <input asp-for = "@Model.Name" class="form-control" id="username">
    </div>
    <div class="form-group">
        <label for="username">Nueva descripcion</label>
        <input asp-for = "@Model.Description" class="form-control" id="username">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>