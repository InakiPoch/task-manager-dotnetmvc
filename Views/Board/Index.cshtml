@{
    ViewData["Title"] = "Tableros";
    var roleCheck = Context.Items["RoleCheck"] as RoleCheck;
}

@using tl2_tp10_2023_InakiPoch.ViewModels
@using tl2_tp10_2023_InakiPoch.Repositories
@model GetBoardsViewModel

<table class="table table-striped table-dark text-center">
    <thead>
        <tr>
            <th colspan="5">LISTA DE TABLEROS</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.AssignedBoards.Any()) {
            <th colspan="5" class="text-center">TABLEROS ASIGNADOS</th>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">ID del Propietario</th>
                <th scope="col">Opcion</th>
            </tr>
            @foreach(Board board in Model.AssignedBoards) {
                <tr>
                    <td>@board.Id</td>
                    <td>@board.Name</td>
                    <td>@board.Description</td>
                    <td>@board.OwnerId</td>
                    <td>
                        <button class="btn btn-success">
                            <a asp-controller="Board" asp-action="Update" asp-route-id="@board.Id" class="badge badge-primary">Actualizar</a>
                        </button>
                        @if(roleCheck.IsAdmin()) {
                            <button class="btn btn-success">
                                <a asp-controller="Board" asp-action="Delete" asp-route-id="@board.Id" class="badge badge-primary">Borrar</a>
                            </button>
                        } else {
                            <p></p>
                        }
                    </td>
                </tr>
            }
        }
        @if(Model.AssignedTasksBoards.Any()) {
            <th colspan="5" class="text-center">TABLEROS DE TAREAS ASIGNADOS</th>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">ID del Propietario</th>
                <th scope="col">Opcion</th>
            </tr>
            @foreach(Board board in Model.AssignedTasksBoards) {
                <tr>
                    <td>@board.Id</td>
                    <td>@board.Name</td>
                    <td>@board.Description</td>
                    <td>@board.OwnerId</td>
                    <td>
                        @if(roleCheck.IsAdmin()) {
                            <button class="btn btn-success">
                                <a asp-controller="Board" asp-action="Update" asp-route-id="@board.Id" class="badge badge-primary">Actualizar</a>
                            </button>
                            <button class="btn btn-success">
                                <a asp-controller="Board" asp-action="Delete" asp-route-id="@board.Id" class="badge badge-primary">Borrar</a>
                            </button>
                        } else {
                            <p></p>
                        }
                    </td>
                </tr>
            }
        }
        @if(Model.AllBoards.Any()) {
            <th colspan="5" class="text-center">TODOS LOS TABLEROS</th>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">ID del Propietario</th>
                <th scope="col">Opcion</th>
            </tr>
            @foreach(Board board in Model.AllBoards) {
                <tr>
                    <td>@board.Id</td>
                    <td>@board.Name</td>
                    <td>@board.Description</td>
                    <td>@board.OwnerId</td>
                    <td>
                        <button class="btn btn-success">
                            <a asp-controller="Board" asp-action="Update" asp-route-id="@board.Id" class="badge badge-primary">Actualizar</a>
                        </button>
                        <button class="btn btn-success">
                            <a asp-controller="Board" asp-action="Delete" asp-route-id="@board.Id" class="badge badge-primary">Borrar</a>
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
    @* So both admin and operators can only create boards for them and only them *@
    <button class="btn btn-outline-dark">
        <a asp-controller="Board" asp-action="Add" asp-route-id="@roleCheck.LoggedUserId()">Crear Tablero</a>
    </button>
</table>
