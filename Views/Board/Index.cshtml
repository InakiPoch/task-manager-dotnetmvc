@{
    ViewData["Title"] = "Home Page";
    var roleCheck = Context.Items["RoleCheck"] as RoleCheck;
}

@using tl2_tp10_2023_InakiPoch.ViewModels
@using tl2_tp10_2023_InakiPoch.Repositories
@model GetBoardsViewModel

<table class="table">
    <thead class="thead-dark">
    </thead>
    <tbody>
        @if(Model.AssignedBoards.Any()) {
            <th colspan="4">TABLEROS ASIGNADOS</th>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Owner ID</th>
            </tr>
            @foreach(Board board in Model.AssignedBoards) {
                <tr>
                    <td>@board.Id</td>
                    <td>@board.Name</td>
                    <td>@board.Description</td>
                    <td>@board.OwnerId</td>
                    <td>
                        <button class="btn btn-primary">
                            <a asp-controller="Board" asp-action="Update" asp-route-id="@board.Id" class="badge badge-primary">Update</a>
                        </button>
                        @if(roleCheck.IsAdmin()) {
                            <button class="btn btn-primary">
                                <a asp-controller="Board" asp-action="Delete" asp-route-id="@board.Id" class="badge badge-primary">Delete</a>
                            </button>
                        }
                    </td>
                </tr>
            }
        }
        @if(Model.AssignedTasksBoards.Any()) {
            <th colspan="4">TABLEROS DE TAREAS ASIGNADOS</th>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Owner ID</th>
            </tr>
            @foreach(Board board in Model.AssignedTasksBoards) {
                <tr>
                    <td>@board.Id</td>
                    <td>@board.Name</td>
                    <td>@board.Description</td>
                    <td>@board.OwnerId</td>
                    <td>
                        @if(roleCheck.IsAdmin()) {
                            <button class="btn btn-primary">
                                <a asp-controller="Board" asp-action="Update" asp-route-id="@board.Id" class="badge badge-primary">Update</a>
                            </button>
                            <button class="btn btn-primary">
                                <a asp-controller="Board" asp-action="Delete" asp-route-id="@board.Id" class="badge badge-primary">Delete</a>
                            </button>
                        }
                    </td>
                </tr>
            }
        }
        @if(Model.AllBoards.Any()) {
            <th colspan="4">TABLEROS RESTANTES</th>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Owner ID</th>
            </tr>
            @foreach(Board board in Model.AllBoards) {
                <tr>
                    <td>@board.Id</td>
                    <td>@board.Name</td>
                    <td>@board.Description</td>
                    <td>@board.OwnerId</td>
                    <td>
                        <button class="btn btn-primary">
                            <a asp-controller="Board" asp-action="Update" asp-route-id="@board.Id" class="badge badge-primary">Update</a>
                        </button>
                        <button class="btn btn-primary">
                            <a asp-controller="Board" asp-action="Delete" asp-route-id="@board.Id" class="badge badge-primary">Delete</a>
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
    @* So both admin and operators can only create boards for them and only them *@
    <button class="btn btn-outline-primary">
        <a asp-controller="Board" asp-action="Add" asp-route-id="@roleCheck.LoggedUserId()">Add Board</a>
    </button>
</table>
