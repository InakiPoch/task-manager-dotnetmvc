@{
    ViewData["Title"] = "Usuarios";
}

@using tl2_tp10_2023_InakiPoch.ViewModels
@model GetUsersViewModel

<table class="table">
    <thead class="thead-dark">
        <tr>
        <th scope="col">Id</th>
        <th scope="col">Usuario</th>
        <th scope="col">Rol</th>
        </tr>
    </thead>
    <tbody>
        @foreach(User user in Model.Users) {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@Enum.GetName(user.Role)</td>
                <td>
                    <button class="btn btn-primary">
                        <a asp-controller="User" asp-action="Update" asp-route-id="@user.Id" class="badge badge-primary">Actualizar</a>
                    </button>
                    <button class="btn btn-primary">
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="badge badge-primary">Borrar</a>
                    </button>
                </td>
            </tr>
        }
    </tbody>
    <button class="btn btn-outline-primary">
        <a asp-controller="User" asp-action="Add">Crear usuario</a>
    </button>
</table>
