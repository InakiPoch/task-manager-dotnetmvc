@{ 
    ViewData["Title"] = "Add User";
}

@using tl2_tp10_2023_InakiPoch.ViewModels
@model AddUserViewModel

<h1>@ViewData["Title"]</h1>
<form asp-controller="User" asp-action="Add">
    <div class="form-group">
        <label for="username">Nombre de usuario</label>
        <input asp-for = "@Model.Username" class="form-control" id="username">
    </div>
    <div class="form-group">
        <label for="username">Password del usuario</label>
        <input asp-for = "@Model.Password" class="form-control" id="username">
    </div>
    <div class="form-group">
        <label for="username">Rol del usuario (1: Admin, 2: Op)</label>
        <input asp-for = "@Model.Role" class="form-control" id="username">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
